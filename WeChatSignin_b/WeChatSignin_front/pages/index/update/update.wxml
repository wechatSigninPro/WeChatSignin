<!--pages/index/update/update.wxml-->
<view class="container">
  <view class="content">
    <view class="content-above">
      <view class="form-input">
        <view class="input-item">
          <text class="input-label">课程名称</text>
          <input class="input-val" placeholder="请输入课程名称" maxlength="40" bindinput="inputName" value="{{name}}" />
        </view>
        <view class="input-item">
          <text class="input-label">课程代码</text>
          <input class="input-val" placeholder="请输入课程代码" maxlength="10" bindinput="inputCode" value="{{code}}" />
        </view>
        <view class="input-item">
          <text class="input-label">上课时间</text>
          <input class="input-val" placeholder="请输入上课时间" maxlength="20" bindinput="inputTime" value="{{time}}" />
        </view>
        <view class="input-item">
          <text class="input-label">上课地点</text>
          <input class="input-val" placeholder="请输入上课地点" maxlength="20" bindinput="inputPlace" value="{{place}}" />
        </view>
      </view>
    </view>
    <view class="content-below" bindtap="submit">
      <text>修改</text>
    </view>
  </view>
</view>