/* pages/sign/export/export.wxss */
.container {
  background-color: #f6f6f6;
}
/* nobody */
.notice {
  display: flex;
  flex-direction: column;
  align-items: center; 
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  margin: 110rpx 5% 0rpx;
  background-color: #fff;
}
.notice-text {
  margin: 20rpx 30rpx 20rpx;
  font-size: 32rpx;
  color: #7e7e7e;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 110rpx;
}

.content-form {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
}

.input-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
}

.input-label {
  padding-right: 20rpx;
  border-right: 1px solid #e5e5e5;
  font-size: 32rpx;
}

.input-val {
  flex: 1;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #7acfa6;
  color: #fff;
  text-align: center;
  border-radius: 3px;
  margin: 50rpx 80rpx;
}