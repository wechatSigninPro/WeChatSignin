/* pages/index/search/search.wxss */
.container {
  background-color: #f6f6f6;
}
/* nobody */
.notice {
  display: flex;
  flex-direction: column;
  align-items: center; 
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  margin: 110rpx 5% 0rpx;
  background-color: #fff;
}
.notice-text {
  margin: 20rpx 30rpx 20rpx;
  font-size: 32rpx;
  color: #7e7e7e;
}
/* somebody */
.search-bar {
  display: flex;
  flex-direction: column;
  position: fixed;   
  z-index: 1;  
  width: 100%; 
  height: 250rpx;
  background-color: #f6f6f6;
}
.search-form {
  display: flex;
  flex-direction: row;
  margin: 110rpx 50rpx 30rpx;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  background-color: #fff;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  border-right: 1px solid #e5e5e5;
}
.search-val {
  margin: 30rpx;
}
.search-btn {
  display: flex;
  align-items: center;
  border-radius: 2rpx; 
  background: #7acfa6;
}
.search-btn:active {
  opacity: 0.8;
}
.search-text {
  margin: 30rpx;
  font-size: 32rpx;
}
.courses {
  display: flex;
  flex-direction: column;
  padding-top: 250rpx; 
}

.courses-item {
  margin: 0 30rpx 30rpx;
  padding: 20rpx 20rpx;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
}

.courses-major {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.courses-name {
  font-size: 32rpx;
}

.courses-odd {
  font-size: 28rpx;
  color: #7e7e7e;
}

.courses-minor {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.course-room {
  font-size: 24rpx;
  color: #7e7e7e;
}

.course-time {
  font-size: 24rpx;
  color: #7e7e7e;
}