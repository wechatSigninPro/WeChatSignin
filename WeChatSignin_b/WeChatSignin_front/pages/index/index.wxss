/* pages/index/index.wxss */
.container {
  background-color: #f6f6f6;
}
.operations-bar {
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 230rpx;
  background-color: #f6f6f6;
}
.operations {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.oper-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 0 20rpx;
  width: 180rpx;
}

.oper-icon {
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}

.oper-text {
  font-size: 24rpx;
  color: #7e7e7e;
}

.content {
  padding: 230rpx 0 20rpx;
  display: flex;
  flex-direction: column;
}

.courses {
  display: flex;
  flex-direction: column;
}

.courses-item {
  margin: 0 30rpx 30rpx;
  padding: 20rpx 20rpx;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
}

.courses-major {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.courses-name {
  font-size: 32rpx;
}

.courses-odd {
  font-size: 28rpx;
  color: #7e7e7e;
}

.courses-minor {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  font-size: 24rpx;
  color: #7e7e7e;
}

.notice {
  display: flex;
  flex-direction: column;
  align-items: center; 
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  margin: 30rpx 5% 0rpx;
  background-color: #fff;
}
.notice-text {
  margin: 20rpx 30rpx 20rpx;
  font-size: 32rpx;
  color: #7e7e7e;
}