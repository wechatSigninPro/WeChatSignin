/* pages/index/update/update.wxss */
.container {
  background-color: #f6f6f6;
}

/* nobody */
.notice {
  display: flex;
  flex-direction: column;
  align-items: center; 
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  margin: 110rpx 5% 0rpx;
  background-color: #fff;
}
.notice-text {
  margin: 20rpx 30rpx 20rpx;
  font-size: 32rpx;
  color: #7e7e7e;
}

/* teacher */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 110rpx 0 0;
}

.content-above {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-input {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
}

.input-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
}

.input-label {
  padding-right: 20rpx;
  border-right: 1px solid #e5e5e5;
  font-size: 32rpx;
}

.input-val {
  flex: 1;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.content-below {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #7acfa6;
  color: #fff;
  text-align: center;
  border-radius: 3px;
  margin: 50rpx 80rpx;
}

.content-below:active {
  opacity: 0.8;
}

/* student */
.search-bar {
  display: flex;
  flex-direction: column;
  position: fixed;   
  z-index: 1;  
  width: 100%; 
  height: 250rpx;
  background-color: #f6f6f6;
}
.search-form {
  display: flex;
  flex-direction: row;
  margin: 110rpx 50rpx 30rpx;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
  background-color: #fff;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  border-right: 1px solid #e5e5e5;
}
.search-val {
  margin: 30rpx;
}
.search-btn {
  display: flex;
  align-items: center;
  border-radius: 2rpx; 
  background: #7acfa6;
}
.search-text {
  margin: 30rpx;
  font-size: 32rpx;
}
.courses {
  display: flex;
  flex-direction: column;
  padding-top: 250rpx; 
}

.courses-item {
  margin: 0 30rpx 30rpx;
  padding: 20rpx 20rpx;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 5rpx;
}

.courses-major {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.courses-name {
  font-size: 32rpx;
}

.courses-odd {
  font-size: 28rpx;
  color: #7e7e7e;
}

.courses-minor {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  font-size: 24rpx;
  color: #7e7e7e;
}