/* pages/index/applydetails/applydetails.wxss */

.container {
  background-color: #f6f6f6;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 110rpx;
}

.content-course {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
  border: 1px solid #e5e5e5;
}

.course-name {
  padding: 20rpx 0 10rpx;
  border-bottom: 1px solid #e5e5e5;
}

.course-name-text {
  font-size: 38rpx;
  font-weight: 400;
}

.course-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  margin: 5rpx 0;
  color: #7e7e7e;
}

.item-name {
  font-size: 32rpx;
}

.item-value {
  font-size: 28rpx;
}

.update-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #7acfa6;
  color: #fff;
  text-align: center;
  border-radius: 3px;
  margin: 0 80rpx;
}

.delete-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  color: #fff;
  background: #e55c5c;
  text-align: center;
  border-radius: 3px;
  margin: 30rpx 80rpx 50rpx;
}

.update-btn:active, .delete-btn:active {
  opacity: 0.8;
}
