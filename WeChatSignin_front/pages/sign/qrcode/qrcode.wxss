/* pages/sign/qrcode/qrcode.wxss */
.container {
  background-color: #f6f6f6;
}
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top: 110rpx;
}
.content-course {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
  border: 1px solid #e5e5e5;
}
.course-hd {
  padding-bottom: 10rpx;
  border-bottom: 1px solid #e5e5e5;
}
.courses-major {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 0 10rpx;
  
}
.courses-name {
  font-size: 38rpx;
  font-weight: 400;
}
.courses-odd {
  font-size: 32rpx;
  font-weight: 400;
  color: #7e7e7e;
}
.courses-minor {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
  color: #7e7e7e;
}
.course-bd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.qrcode {
  width: 500rpx;
  height: 500rpx;
  border-radius: 5px;
}

.qrcode-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #7e7e7e;
  margin-bottom: 20rpx;
}

.notice {
  font-size: 28rpx;
  font-weight: 400;
  color: #7e7e7e;
  margin: 20rpx 0;
}