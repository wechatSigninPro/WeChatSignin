/* pages/me/me.wxss */

.container {
  background-color: #f6f6f6;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-info-hd {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  margin-top: 30rpx;
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
}

.user-title {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.user-name {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.user-id {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #7a7a7a;
}

.user-role {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #7a7a7a;
}

.user-info-bd {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.user-info-item {
  display: flex;
  flex-direction: row;
  line-height: 140%;
}

.info-item-left {
  flex: 1;
  font-size: 32rpx;
}

.info-item-right {
  font-size: 28rpx;
  color: #7a7a7a;
}

.operations {
  display: flex;
  flex-direction: column;
}

.oper-item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  margin-top: 30rpx;
  padding: 20rpx 30rpx 20rpx;
  align-items: center;
}

.oper-icon {
  width: 50rpx;
  height: 50rpx;
}

.oper-text {
  flex: 1;
  font-size: 32rpx;
  padding-left: 30rpx;
}
